# Порт для запуска приложения
PORT=3000

# Twitch OAuth токен для бота (получите на https://twitchapps.com/tmi/)
TWITCH_OAUTH_TOKEN=oauth:your_token_here

# Имя пользователя Twitch бота
TWITCH_BOT_USERNAME=your_bot_username

# Supabase конфигурация
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_key_here

# Twitch Client ID и Secret для OAuth (получите на https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret

# URL вашего приложения (для OAuth callback)
APP_URL=https://nasuvan-production.up.railway.app
